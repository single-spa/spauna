{
  "name": "spauna",
  "version": "1.0.0",
  "description": "Centralized microfrontend project configuration",
  "type": "module",
  "exports": {
    ".": "./lib/spauna.js"
  },
  "bin": {
    "spauna": "./bin/spauna-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "test": "jest --passWithNoTests",
    "cli": "node --import ./register-hooks.js src/spauna-cli.ts",
    "format": "pnpm exec prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "single-spa",
    "microfrontend",
    "configuration"
  ],
  "author": "Joel Denning",
  "license": "MIT",
  "dependencies": {
    "@types/yargs": "^17.0.32",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
